{
  "configurations": [
    {
      "name": "Debug Frontend",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn start",
      "env": {
        "BROWSER": "none",
        "PORT": "3000"
      },
      "serverReadyAction": {
        "action": "debugWithChrome",
        "pattern": "Compiled",
        "uriFormat": "http://localhost:3000",
        "webRoot": "${workspaceFolder}"
      },
      "preLaunchTask": "yarn:install",
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 30
      }
    }
  ]
}
